<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".EnergyPredictorApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlowState"
        tools:targetApi="31">
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.FlowState">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.typing.TypingSpeedActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName="com.personaleenergy.app.ui.MainActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.reaction.ReactionTimeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName="com.personaleenergy.app.ui.MainActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.EnergyPredictionActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.EnergyDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.MainActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.manual.ManualDataEntryActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.settings.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.data.DataLogsActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.data.HeartRateDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.data.DataLogsActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.data.SleepDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.data.DataLogsActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.data.CognitiveDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.data.DataLogsActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.schedule.AIScheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.insights.WeeklyInsightsActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.calendar.GoogleCalendarOnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.calendar.SimpleCalendarOnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

    </application>

</manifest>

