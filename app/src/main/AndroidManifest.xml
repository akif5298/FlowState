<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- BODY_SENSORS and ACTIVITY_RECOGNITION removed - we use Health Connect API instead -->
    <!-- Health Connect handles these permissions through its own permission system -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Health Connect permissions -->
    <uses-permission android:name="android.permission.health.READ_HEART_RATE" />
    <uses-permission android:name="android.permission.health.READ_SLEEP" />
    
    <!-- Query Health Connect package -->
    <queries>
        <package android:name="com.google.android.apps.healthdata" />
    </queries>

    <application
        android:name=".EnergyPredictorApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlowState"
        tools:targetApi="31">
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.FlowState">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.typing.TypingSpeedActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName="com.personaleenergy.app.ui.MainActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.reaction.ReactionTimeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName="com.personaleenergy.app.ui.MainActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.EnergyPredictionActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.EnergyDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.MainActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.manual.ManualDataEntryActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.settings.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.data.DataLogsActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.data.HeartRateDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.data.DataLogsActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.data.SleepDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.data.DataLogsActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.data.CognitiveDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.data.DataLogsActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.schedule.AIScheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.insights.WeeklyInsightsActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState"
            android:parentActivityName="com.personaleenergy.app.ui.EnergyDashboardActivity" />

        <activity
            android:name="com.personaleenergy.app.ui.calendar.GoogleCalendarOnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <activity
            android:name="com.personaleenergy.app.ui.calendar.SimpleCalendarOnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.FlowState" />

        <!-- Health Connect onboarding activity (required for Health Connect integration) -->
        <activity
            android:name="com.personaleenergy.app.ui.settings.HealthConnectOnboardingActivity"
            android:exported="true"
            android:permission="com.google.android.apps.healthdata.permission.START_ONBOARDING"
            android:theme="@style/Theme.FlowState">
            <intent-filter>
                <action android:name="androidx.health.ACTION_SHOW_ONBOARDING" />
            </intent-filter>
        </activity>
        
        <!-- Health Connect onboarding activity alias for Android U+ -->
        <activity-alias
            android:name="UAndAboveOnboardingActivity"
            android:exported="true"
            android:targetActivity="com.personaleenergy.app.ui.settings.HealthConnectOnboardingActivity"
            android:permission="android.permission.health.START_ONBOARDING">
            <intent-filter>
                <action android:name="android.health.connect.action.SHOW_ONBOARDING" />
            </intent-filter>
        </activity-alias>
        
        <!-- Health Connect permission usage activity (required for Android 14+) -->
        <!-- This handles the privacy/rationale screen when user taps privacy link in Health Connect UI -->
        <activity
            android:name="com.personaleenergy.app.ui.settings.HealthConnectPermissionUsageActivity"
            android:exported="true"
            android:theme="@style/Theme.FlowState">
            <intent-filter>
                <action android:name="android.intent.action.VIEW_PERMISSION_USAGE" />
                <category android:name="android.intent.category.HEALTH_PERMISSIONS" />
            </intent-filter>
        </activity>

    </application>

</manifest>

