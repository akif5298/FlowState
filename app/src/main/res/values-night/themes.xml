<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FlowState" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowBackground">@color/background_light</item>
        
        <!-- Material 3 Dark Theme Enhancements -->
        <item name="materialCardViewStyle">@style/CardViewStyleDark</item>
        
        <!-- Material 3 Dark Theme Colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
    </style>
    
    <style name="CardViewStyleDark" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardMaxElevation">@dimen/elevation_xhigh</item>
    </style>
    
    <style name="ModernButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>

