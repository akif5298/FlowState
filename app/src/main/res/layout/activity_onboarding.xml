<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvOnboardingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to FlowState!"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:letterSpacing="-0.02"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvOnboardingDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To generate accurate energy predictions, we need some data about you."
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvOnboardingStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Checking your data..."
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?attr/colorSurfaceVariant"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Connect Wearable Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConnectWearable"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:text="Connect Wearable Device"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:letterSpacing="0.02"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:icon="@android:drawable/ic_dialog_info"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:cornerRadius="16dp"
            app:iconTint="@android:color/white"
            android:visibility="gone"
            style="@style/Widget.Material3.Button" />

        <!-- Manual Entry Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManualEntry"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:text="Enter Data Manually"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:letterSpacing="0.02"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:cornerRadius="16dp"
            app:iconTint="@android:color/white"
            android:visibility="gone"
            style="@style/Widget.Material3.Button" />

        <!-- Skip Button -->
        <TextView
            android:id="@+id/btnSkipOnboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Skip for now"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone" />

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What data do we need?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Heart rate data (from wearable or manual entry)\n• Sleep data (last night's sleep)\n• Typing speed test (cognitive performance)\n• Reaction time test (cognitive performance)"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:lineSpacingMultiplier="1.5" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>

