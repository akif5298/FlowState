<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:contentScrim="@drawable/gradient_background"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleMarginEnd="24dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/logoIcons"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/app_logo"
                    android:scaleType="centerInside"
                    android:contentDescription="FlowState Logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Energy Dashboard"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/logoIcons"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingBottom="160dp">

            <!-- Current Energy Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCurrentEnergy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#636363"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">


                    <TextView
                        android:id="@+id/tvCurrentEnergyLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Current Energy"
                        android:textSize="16sp"
                        android:textColor="#CCCCCC"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvCurrentEnergy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="75"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCurrentEnergyLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvEnergyLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIGH"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#10B981"
                        android:backgroundTint="#10B981"
                        android:background="@drawable/rounded_button"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCurrentEnergy"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- AI Insight Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAIInsight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:backgroundTint="#2A2A2A"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cardCurrentEnergy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvAIInsightTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="AI Insight"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvAIInsight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Energy dip expected in 25 min. Hydrate or take a short walk."
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:lineSpacingMultiplier="1.5"
                        app:layout_constraintTop_toBottomOf="@+id/tvAIInsightTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Energy Graph Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGraph"
                android:layout_width="0dp"
                android:layout_height="300dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cardAIInsight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvGraphTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Energy Prediction"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Placeholder for chart -->
                    <View
                        android:id="@+id/energyChart"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#F5F5F5"
                        android:minHeight="200dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvGraphTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Cognitive Tests Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCognitive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cardGraph"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvCognitiveTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cognitive Tests"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Combined Energy Score -->
                    <TextView
                        android:id="@+id/tvCognitiveScore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mental Energy: 82"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCognitiveTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Typing Test Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTypingTest"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:text="Typing Speed Test"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#636363"
                        android:layout_marginBottom="12dp"
                        app:cornerRadius="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCognitiveScore"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Reaction Test Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReactionTest"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:text="Reaction Time Test"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#636363"
                        app:cornerRadius="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/btnTypingTest"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Manual Feedback Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/cardCognitive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvManualFeedbackTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="How energized do you feel right now?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderEnergy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="100"
                        android:value="75"
                        app:layout_constraintTop_toBottomOf="@+id/tvManualFeedbackTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:elevation="8dp"
        android:visibility="visible"
        app:menu="@menu/bottom_navigation"
        app:itemTextColor="@color/text_primary"
        app:itemIconTint="@color/text_primary"
        android:layout_gravity="bottom"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

