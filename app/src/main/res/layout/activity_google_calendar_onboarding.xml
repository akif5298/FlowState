<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:contentScrim="@drawable/gradient_background"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background"
                android:padding="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Google Calendar"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:paddingBottom="160dp">

            <!-- Welcome Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWelcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Connect Google Calendar"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:letterSpacing="-0.01"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Connect your Google Calendar to help FlowState build your AI schedule around your existing events. We'll only read your calendar events to optimize your task scheduling."
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingMultiplier="1.5"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/cardWelcome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ready to connect"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Benefits Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBenefits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/cardStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvBenefitsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="âœ¨ Benefits"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:letterSpacing="-0.01"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvBenefitsList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Schedule tasks around your existing meetings\nâ€¢ Avoid conflicts with your calendar\nâ€¢ Optimize your productivity based on your schedule\nâ€¢ Get AI recommendations that fit your day"
                        android:textSize="15sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingMultiplier="1.6"
                        app:layout_constraintTop_toBottomOf="@+id/tvBenefitsTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Connect Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConnectCalendar"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:text="Connect Google Calendar"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:letterSpacing="0.02"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconGravity="start"
                app:iconPadding="16dp"
                app:iconTint="@android:color/white"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardBenefits"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Skip Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkip"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Skip for now"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:backgroundTint="@android:color/transparent"
                android:letterSpacing="0.02"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btnConnectCalendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

