<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:background="?attr/colorSurfaceVariant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <!-- Task Title (left) -->
        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvTime" />

        <!-- Time Range (right, same line as task title) -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:00 AM - 8:00 AM"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvTaskTitle" />

        <!-- Type Indicator (Lightbulb + AI Scheduled) - below time -->
        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ AI Scheduled"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTime"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Delete Button (small button below AI Scheduled, aligned right) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteTask"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="@android:color/white"
            app:iconSize="18dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#EF4444"
            app:layout_constraintTop_toBottomOf="@+id/tvType"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Energy Level Badge (below task title) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipEnergyLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High energy"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="8dp"
            app:chipBackgroundColor="@color/energy_medium"
            app:chipStrokeWidth="0dp"
            app:chipMinHeight="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTaskTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Energy Level Icon (hidden, emoji is in chip now) -->
        <TextView
            android:id="@+id/ivEnergyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Reasoning (hidden, not used in new format) -->
        <TextView
            android:id="@+id/tvReasoning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

