<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_background"
            app:popupTheme="@style/ThemeOverlay.Material3.Dark" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Statistics Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvStatsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Performance Statistics"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/labelAvgWPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Typing Speed:"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintTop_toBottomOf="@+id/tvStatsTitle"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvAvgWPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- WPM"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/labelAvgWPM"
                        app:layout_constraintStart_toEndOf="@+id/labelAvgWPM"
                        app:layout_constraintBaseline_toBaselineOf="@+id/labelAvgWPM" />

                    <TextView
                        android:id="@+id/labelAvgAccuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Accuracy:"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/labelAvgWPM"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvAvgAccuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/labelAvgAccuracy"
                        app:layout_constraintStart_toEndOf="@+id/labelAvgAccuracy"
                        app:layout_constraintBaseline_toBaselineOf="@+id/labelAvgAccuracy" />

                    <TextView
                        android:id="@+id/labelAvgReaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Reaction Time:"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/labelAvgAccuracy"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvAvgReaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- ms"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/labelAvgReaction"
                        app:layout_constraintStart_toEndOf="@+id/labelAvgReaction"
                        app:layout_constraintBaseline_toBaselineOf="@+id/labelAvgReaction" />

                    <TextView
                        android:id="@+id/labelTotalTests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Tests:"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/labelAvgReaction"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvTotalTests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/labelTotalTests"
                        app:layout_constraintStart_toEndOf="@+id/labelTotalTests"
                        app:layout_constraintBaseline_toBaselineOf="@+id/labelTotalTests"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Typing Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTypingChart"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/cardStats"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvTypingChartTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="âŒ¨ï¸ Typing Speed Trend"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/typingChart"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvTypingChartTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Reaction Time Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReactionChart"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/cardTypingChart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvReactionChartTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="âš¡ Reaction Time Trend"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/reactionChart"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvReactionChartTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Tests Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/cardReactionChart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvRecentTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ• Recent Tests"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvRecentTests"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingMultiplier="1.6"
                        android:fontFamily="monospace"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvRecentTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Cognitive Insights Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInsights"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:backgroundTint="?attr/colorSurface"
                app:layout_constraintTop_toBottomOf="@+id/cardRecent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/tvInsightsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Performance Insights"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvCognitiveInsights"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Loading insights..."
                        android:textSize="15sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingMultiplier="1.6"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvInsightsTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

