<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:contentScrim="@drawable/gradient_background"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleMarginEnd="24dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logs"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Summary Section (AI + Weather) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#F8F9FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:text="Daily Snapshot"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvWeather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--Â°C"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAISummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data analysis pending..."
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:lineSpacingMultiplier="1.4" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Heart & Recovery -->
            <TextView
                android:text="Heart &amp; Recovery"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartHR"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg HR"
                                android:textSize="12sp"
                                android:textColor="#777777"/>
                            <TextView
                                android:id="@+id/tvAvgHR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- bpm"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Resting"
                                android:textSize="12sp"
                                android:textColor="#777777"/>
                            <TextView
                                android:id="@+id/tvRestingHR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- bpm"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg HRV"
                                android:textSize="12sp"
                                android:textColor="#777777"/>
                            <TextView
                                android:id="@+id/tvAvgHRV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- ms"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Activity Metrics -->
            <TextView
                android:text="Activity"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="16dp"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins">

                    <!-- Steps -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Steps" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvSteps" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Distance -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Distance" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvDistance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Active Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Active Cal" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvActiveCal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Total Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Cal" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvTotalCal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Floors -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Floors" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvFloors" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Elevation -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Elevation" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvElevation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Vitals -->
            <TextView
                android:text="Vitals &amp; Body"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="16dp"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins">

                    <!-- Blood Pressure -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BP" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvBP" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--/--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Oxygen Saturation -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SpO2" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvSpO2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Respiratory Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Resp Rate" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvRespRate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Glucose -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Glucose" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvGlucose" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Weight -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Weight" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvWeight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- VO2 Max -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VO2 Max" android:textSize="12sp" android:textColor="#777777"/>
                        <TextView android:id="@+id/tvVo2Max" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                    </LinearLayout>

                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sleep -->
            <TextView
                android:text="Sleep"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sleep Quality Score"
                            android:textSize="14sp"
                            android:textColor="#777777"/>

                        <TextView
                            android:id="@+id/tvSleepScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chartSleep"
                        android:layout_width="match_parent"
                        android:layout_height="120dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Cognitive Performance -->
            <TextView
                android:text="Cognitive Scores"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTyping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Typing Speed (WPM)"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginBottom="8dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartCognitive"
                        android:layout_width="match_parent"
                        android:layout_height="120dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reaction Time (ms)"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginBottom="8dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartReaction"
                        android:layout_width="match_parent"
                        android:layout_height="120dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:elevation="8dp"
        app:menu="@menu/bottom_navigation"
        app:itemTextColor="@color/text_primary"
        app:itemIconTint="@color/text_primary"
        android:layout_gravity="bottom"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
